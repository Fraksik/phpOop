{% extends "layouts/main.twig" %}
{% block content %}
<div class="catalog">
    {% for product in model %}
	<div class="product">
	<h2><a href="index.php?c=product&a=card&id={{ product.id }}">{{ product.name }}</a></h2>
	<p>{{ product.description }}</p>
	<p>{{ product.price }}</p>
	</div>
    {% endfor %}
</div>
<br>
<a href="index.php?c=cart">Корзина</a>
<br>
{% endblock %}

